@model contact.Models.t店家

@{
    ViewBag.Title = "SupEdit";
}


@section scripts{
    <script>


        function edit() {
            alert("資料修改成功")
        }
    </script>
}
@section styles{
    <style>

        textarea {

            display: block;
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            -webkit-appearance: none;
            -moz-appearance: none;
            border-radius: 0.25rem;
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        
            
        }
    </style>
}

<div class="container my-5">
    <div class="row">

        <h2>供應商紀錄與維護</h2>


        <div class="col-12 col-md-12">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <fieldset class="col-md-6  tomatoborder">

                    <div class="form-horizontal">
                        <h4>供應商詳情資訊</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.f店家ID)

                        <div class="form-group">
                            供應商名稱
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.f店家名稱, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.f店家名稱, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            聯絡人
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.f店家負責人, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.f店家負責人, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            聯絡電話
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.f店家連絡電話, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.f店家連絡電話, "", new { @class = "text-danger" })
                            </div>
                        </div>




                        <div class="form-group">
                            電子信箱
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.f電子信箱, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.f電子信箱, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            付款資訊
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.f銀行帳號, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.f銀行帳號, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            備註

                            <div class="col-md-12">

                                @*<textarea cols="100" htmlattributes="{ class = form-control, id = txtb }" id="f__" name="f備註" rows="5" class="valid" aria-invalid="false"></textarea>*@
                                @Html.TextAreaFor(model => model.f備註, new { htmlAttributes = new { @class = "form-control", @id = "txtb" } })
                                @Html.ValidationMessageFor(model => model.f備註, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4 col-12 col-md-4 mt-5 float-end">
                                <input type="submit" value="確認修改" class="btn btn-lg w-100 bg-secondary text-light" onsubmit="edit()" />
                            </div>
                        </div>


                    </div>
                </fieldset>

            }

            <div>
                @Html.ActionLink("返回供應商列表", "supplier")
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
