@model contact.Models.t店家

@{
    ViewBag.Title = "SupCreate";
}

@section scripts{
    <script>

        window.onload = function sup() {
            var sup = document.getElementById('sup');
            sup.value = "供應商";

        }
    </script>
}


@section styles{
    <style>
    </style>
}

<div class="container my-5">
    <div class="row">
        <h2>供應商紀錄與維護</h2>




        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>新增供應商</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    供應商名稱
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.f店家名稱, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.f店家名稱, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    聯絡人
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.f店家負責人, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.f店家負責人, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    聯絡電話
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.f店家連絡電話, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.f店家連絡電話, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    電子信箱
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.f電子信箱, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                        @Html.ValidationMessageFor(model => model.f電子信箱, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    付款資訊
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.f銀行帳號, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.f銀行帳號, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" onload="sup()" hidden>
                    身分
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.f身分別, new { htmlAttributes = new { @class = "form-control", @id = "sup" } })
                        @Html.ValidationMessageFor(model => model.f身分別, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    備註

                    <div class="col-md-10 col-12">
                        <textarea cols="100" htmlattributes="{ class = form-control , id = txtb}" id="f__" name="f備註" rows="5"></textarea>
                        @*@Html.TextAreaFor(model => model.f備註, new { htmlAttributes = new { @class = "form-control", @id = "txtb" } })*@
                        @Html.ValidationMessageFor(model => model.f備註, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        <input type="submit" value="新增" class="btn w-100 btn-secondary" />
                    </div>
                </div>
            </div>
        }



        <div>
            @Html.ActionLink("返回供應商列表", "supplier")
        </div>

    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
