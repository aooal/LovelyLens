@model contact.Models.t店家

@{
    ViewBag.Title = "隱形眼鏡B2B交易系統平台";
}

@section styles{

    <style>


        form .item:hover {
            transform: scale(2);
            transition-duration: 0.5s;
            border-radius: 10px;
        }

        .tomatoborder {
            border-radius: 10px;
            background-color: #f8f8f8;
            border-bottom: 2px solid #ca9c8f;
            border-top: 2px solid #ca9c8f;
            padding: 16px;
            margin: 0 32px 32px 32px;
        }

        textarea {
            display: block;
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            -webkit-appearance: none;
            -moz-appearance: none;
            border-radius: 0.25rem;
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }

        .pink {
            border-radius: 25px 25px;
            background-image: linear-gradient(to top, #fcbfc1 0%, #ee7d7d 50%);
        }
    </style>

}



@section scripts{
    <script>
        var myStatusValue;
        function statusChange() {
            var Dstatus = document.getElementById('Dstatus');
            myStatusValue = Dstatus.options[Dstatus.selectedIndex].value;
            var theTxt = document.getElementById('txt');
            theTxt.value = myStatusValue;

