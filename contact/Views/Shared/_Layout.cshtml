<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>隱形眼鏡B2B交易系統平台</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/style/tomato.css" rel="stylesheet" />
    @*<link href="~/style/bootstrap.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" referrerpolicy="no-referrer"></script>
    <script>
        //menutext1只是為了讓東西可以選的而加的class 並沒有實際的CSS
        function toggleMenu(number) {
            //加隱藏選單切換
            var menu = document.getElementById("memu-" + number);
            menu.classList.toggle("hide");
            //加選單變色
            //寫法1
            //var changeopt = document.querySelectorAll(".menutext" + number);
            //for (var i = 0; i < changeopt.length; i++) {
            //    changeopt[i].classList.toggle("changeColor");
            //}
            //寫法2
            var changeopt = document.querySelector(".menutext" + number);
            changeopt.classList.toggle("changeColor");

        }
    </script>
    @RenderSection("styles", required: false)


    <style>
        * {
            margin: 0;
            padding: 0;
        }



        .logo {
            /*flex: none;
                padding: 10px;
                width: 100px;*/
            /*background: #000;*/
            color: aliceblue;
            background-color: #fff;

        }

        .menu {
            /*flex: auto;
                padding: 10px;*/
            background: #383636;
            color: aliceblue;
            opacity: 1;
        }



        .user {
            /*flex: none;
                padding: 10px;
                width: 150px;*/
            background: #000;
            color: aliceblue;
        }


        .hide {
            display: none;
        }

        .menu ul {
            text-align: center;
        }

            .menu ul li {
                padding: 10px;
                list-style-type: none;
                background: brown;
                color: #fff;
            }

                .menu ul li a:link {
                    text-decoration: none;
                    color: #ffffff;
                }

                .menu ul li a:visited {
                    text-decoration: none;
                    color: #ffffff;
                }

                .menu ul li a:link {
                    text-decoration: none;
                    color: #ffffff;
                }

        .menu a:link {
            text-decoration: none;
            color: #ffffff;
        }
        /*選單改變顏色*/
        .changeColor {
            background: #000;
        }
    </style>
</head>
<body>

    <div class="container-fluid">

        <div class="row align-content-center">
            @*讓圖片置中text-center*@
            <div class="logo  col-md col-sm text-center me-auto"><a href="/CManager/Index"><img src="~/images/lovely白底re.png" style="object-fit:cover;" class="rounded" alt="lovelylogo"></a></div>
            @*關係管理nav*@
            <div class="menu menutext1 col-md-1 col-sm text-center" onclick="toggleMenu(1);">
                <h6 class="m-3">關係管理 </h6>
                <ul id="memu-1" class="hide">
                    <li class="col">@Html.ActionLink("供應商維護", "supplier", "CManager")</li>
                    <li class="col">@Html.ActionLink("經銷商維護", "customer", "CManager")</li>
                </ul>

            </div>
            @*訂單管理nav*@
            <div class="menu menutext2 col-md-1 col-sm text-center" onclick="toggleMenu(2);">

                <h6 class="m-3">
                    <a href="/COders/MOders" style="color:#fff">訂單管理</a>
                </h6>
            </div>


            <div class="menu menutext3 col-md-1 col-sm text-center" onclick="toggleMenu(3);">
                <h6 class="m-3"><a href="/COders/Mexchange" style="color:#fff">售後服務</a></h6>
                @*<ul id="memu-3" class="hide">
                        <li>@Html.ActionLink("所有換貨單", "Mexchange", "COders")</li>
                        <li>@Html.ActionLink("....", "About", "COders")</li>
                    </ul>*@
            </div>

            <div class="menu menutext4 col-md-1 col-sm text-center" onclick="toggleMenu(4);">
                <h6 class="m-3"><a href="/COders/Mshipping" style="color:#fff">出貨管理</a></h6>

                @*<ul id="memu-4" class="hide">


                        <li>@Html.ActionLink("所有訂單", "Mshipping", "COders")</li>

                    @*</ul>*@

            </div>
            <div class="menu menutext5 col-md-1 col-sm text-center" onclick="toggleMenu(5);">
                <h6 class="m-3">商品管理</h6>
                <ul id="memu-5" class="hide">
                    <li>@Html.ActionLink("所有商品", "MProducts", "CProducts")</li>
                    <li>@Html.ActionLink("新增商品", "MProductCRUD", "CProducts")</li>

                </ul>

            </div>

            <div class="menu menutext6 col-md-1 col-sm text-center" onclick="toggleMenu(6);">
                <h6 class="m-3">活動管理</h6>

                <ul id="memu-6" class="hide">
                    <li>@Html.ActionLink("所有活動", "MDiscountActivity", "CDiscount")</li>
                    <li>@Html.ActionLink("新增活動", "ActivityCreate", "CDiscount")</li>
                </ul>

            </div>

            <div class="user col col-sm text-center">
                <h6 class="m-3">@Html.Action("Login", "Home") 你 好</h6>
            </div>
        </div>
    </div>





    <div class="container-fluid  body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 隱形眼鏡B2B交易系統平台</p>
        </footer>
    </div>
    @{ @*<script src="~/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/popper.min.js"></script>*@

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    }
    @RenderSection("scripts", required: false)
</body>
</html>

