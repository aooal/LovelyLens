<img src="~/images/@Model.FirstOrDefault().f產品圖片路徑 " width="600" height="800" style="object-fit:cover">

@foreach (var item in Model)
{
    if (item.f產品圖片路徑 != "no-picture.jpg")
    {
       


        <div class="ms-5">
            <img src="~/images/@item.f產品圖片路徑 " style="width: 50px; height: 50px;">

        </div>
        <a href="/Shopping/Cart/@item.f產品ID" class="tomatocartbtn"><i class="bi bi-basket2-fill"></i></a>



    }

}




