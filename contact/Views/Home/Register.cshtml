@model contact.Models.t店家

@{
    ViewBag.Title = "Register";
}

<link href="~/style/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" referrerpolicy="no-referrer"></script>
<link href="~/style/tomato.css" rel="stylesheet" />
<h2>經銷商註冊</h2>


@using (Html.BeginForm("Register", "Home", FormMethod.Post,
                new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>請詳實填寫以下資訊</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <p class="family">帳號（電子信箱）</p>
                @Html.EditorFor(model => model.f電子信箱, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.f電子信箱, "", new { @class = "text-danger" })
            </div>
        </div>
        <p id="chkAccMsg"></p>

        <div class="form-group">
            <div class="col-md-10">
                密碼
                @Html.EditorFor(model => model.f密碼, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                @Html.ValidationMessageFor(model => model.f密碼, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                確認密碼
                @Html.EditorFor(model => model.確認密碼, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                @Html.ValidationMessageFor(model => model.確認密碼, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />


        <div class="form-group">
            <div class="col-md-10">
                店家名稱
                @Html.EditorFor(model => model.f店家名稱, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.f店家名稱, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                負責人
                @Html.EditorFor(model => model.f店家負責人, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.f店家負責人, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                連絡電話
                @Html.EditorFor(model => model.f店家連絡電話, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.f店家連絡電話, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                通訊地址
                @Html.EditorFor(model => model.f地址, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.f地址, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                銀行帳號
                @Html.EditorFor(model => model.f銀行帳號, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.f銀行帳號, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                藥商許可證上傳
                <input type="file" class="form-control-file" name="medicalLicense" id="mlfileid" accept="image/*">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                營業登記許可證上傳
                <input type="file" class="form-control-file" name="businessLicense" id="blfileid" accept="image/*">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.f備註, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.f備註, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="送出" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {

}