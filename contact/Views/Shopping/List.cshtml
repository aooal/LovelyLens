@model IEnumerable<contact.Models.t產品>


@{
    ViewBag.Title = "List";
}

@{
    Layout = "~/Views/Shared/_Layoutsale.cshtml";
}

@section styles{

    <style>
        body {
            background-color: #fd929249;
        }


        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            /* border:  solid #838383 5px; */
            border-radius: 1rem;
        }

        .cardtomato {
            border: 0px;
        }

        /* 讓card裡照片滿版 */
        .tomato-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-bottom-left-radius: 1rem !important;
            border-top-left-radius: 1rem !important;
        }

        /* 錢 */
        .momey::after {
            content: ' 元';
        }

        /* 錢 */
        .momey::before {
            content: '價格: ';
        }

        /* 照片降明度 */
        .card img:hover {
            filter: brightness(.5);
        }



        /* 刪除按鈕 */
        .tomatodangerbtn {
            border-radius: 35px;
            font-family: jf-openhuninn;
            color: #f0b0aa;
            font-size: 18px;
            background: #e8546f;
            padding: 5px 10px 5px 10px;
            border: dotted #e6e6e6 2px;
            text-decoration: none;
        }

            .tomatodangerbtn:hover {
                background: #a12747;
                text-decoration: none;
                color: #ffffff;
            }


        /* 搜尋 方型BTN */
        .tomatoclickbtn {
            -webkit-box-shadow: 0px 1px 3px #666666;
            -moz-box-shadow: 0px 1px 3px #666666;
            box-shadow: 0px 1px 3px #666666;
            font-family: Arial;
            color: #ffffff;
            font-size: 18px;
            background: #ff8a8a;
            padding: 5px 10px 5px 10px;
            border: double #ffffff 4px;
            text-decoration: none;
        }

            .tomatoclickbtn:hover {
                background: #eb6767;
                text-decoration: none;
                color: #ffffff;
            }


        /* 詳情按鈕     */
        .tomatobtn {
            border-radius: 35px;
            font-family: Arial;
            color: #ffffff;
            font-size: 18px;
            background: #d6b6c3;
            padding: 5px 10px 5px 10px;
            border: dotted #fafafa 2px;
            text-decoration: none;
        }

            .tomatobtn:hover {
                background: #d6b6c3;
                background-image: linear-gradient(to bottom, #d6b6c3, #f0a3c6);
                text-decoration: none;
                color: #ffffff;
            }

        /* 加入購物車 */
        .tomatocartbtn {
            -webkit-border-radius: 35px;
            -moz-border-radius: 35px;
            border-radius: 35px;
            font-family: Arial;
            color: #ffffff;
            font-size: 18px;
            background: #eba68d;
            padding: 5px 10px 5px 10px;
            border: dotted #ffffff 2px;
            text-decoration: none;
        }

            .tomatocartbtn:hover {
                background: #cc8b74;
                text-decoration: none;
                color: #ffffff;
            }

        .gotoCheck {
            position: fixed;
            bottom: 100px;
            right: 50px;
            z-index: 9999;
        }


        /* 輪播開始 */
        #lokiSlider img {
            /* object-fit: cover;*/
            /*filter: grayscale(50%);*/
            height: 50vh;
            display: block;
            width: 100%;
        }

        #lokiSlider .carousel-caption {
            text-shadow: #333 0.3rem 0.3rem 0.5rem;
        }

        #lokiSlider .carousel-indicators > button {
            border-radius: 50%;
            height: 15px;
            width: 15px;
            border: 10px solid transparent;
        }

        .vh-50 {
            height: 50vh;
        }

        /* 輪播end */

    </style>

}

@section scripts{
    <script>
        $(function () {
            $('.carousel-indicators:first-child').addClass('active');
            $('.carousel-item:first-child').addClass('active');

        });

    </script>
    }

