@model contact.Models.t優惠活動

@{
    ViewBag.Title = "ActivityDetail";
}


@section styles{
    <style>

        .box {
           /* height: 800px;*/
          /*  width: 100%;*/
            object-fit: cover;
        }
        .mpic {
            background-image: url("@Url.Content("~/images/"+ @Model.f活動照片路徑)");
            background-size: 100%;
            background-repeat: no-repeat;
            border-radius: 5px;
        }

        /*靠文字去稱圖片框大小*/
        .mytext {
            /* width:300px;*/
            height: 300px;
            background-color: rgb(248 195 195 / 0.2);
            /* background-color: rgba(0,0,0,.2);*/
            backdrop-filter: blur(10px);
            border-radius: 5px;
            position: relative;
            top: 100px;
            left: 5px;
            z-index: 1;
        }
        .mybody{
            width:100%;
            height:100vh;
        }

    </style>


}

<div class="mybody">
    <div class="container mt-5">

        <div class="row">
            <h2 class="mt-5">優惠活動詳情</h2>

            @*d-flex justify-content-start align-items-centerw-100 tomatoimg*@
        <div class="box col-12 col-md-12">
            <div class="mpic  col-10 col-md-12 ">
                <div class="mytext col-12 col-md-3 ms-5 text-justify d-flex flex-column justify-content-around align-content-around p-3">
                    <h5 style="color: #ffffff; border-radius: 5px; background-color: rgb(245 87 87 / 0.5);text-align:center">@Html.DisplayFor(model => model.f活動名稱)</h5>
                    <p>@Html.DisplayFor(model => model.f活動詳情)</p>
                    <p>
                        活動期間:@Html.DisplayFor(model => model.f活動起始日)
                        ~@Html.DisplayFor(model => model.f活動結束日)
                    </p>
                    <div>

                        @Html.ActionLink("修改活動", "ActivityEdit", new { id = Model.f優惠活動ID }, new { @class = " tomatobtn" })
                        @Html.ActionLink("返回活動", "MDiscountActivity", new { }, new { @class = " tomatobtn" })

                    </div>


                </div>
            </div>
